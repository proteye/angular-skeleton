{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
//        "indent": [2, 4, {"SwitchCase": 1}],
//        "comma-dangle": ["error", "never"],
//        "camelcase": [2, {"properties": "always"}],
//        "no-plusplus": 0,
//        "no-console": "error",
        "no-console": 0,
        "max-len": ["error", 120],
        "arrow-body-style": 0,
        "no-underscore-dangle": 0,
        "object-curly-spacing": ["error", "never"],
        "no-param-reassign": ["error", { "props": false }]
    }
}
